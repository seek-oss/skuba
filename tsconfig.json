{
  "compilerOptions": {
    "customConditions": ["@seek/skuba/source"],
    "declaration": true,
    "lib": ["ES2024"],
    "outDir": "lib",
    "removeComments": false,
    "target": "ES2024",
    "moduleResolution": "Node16",
    "module": "node20",
    "rootDir": "."
  },
  "exclude": [
    "integration/**/*",
    "lib*/**/*",
    "packages/api/lib",
    "packages/eslint-config-skuba",
    "packages/eslint-plugin-skuba",
    "template/**/*",
    "**/*/tsdown.config.mts"
  ],
  "extends": "./config/tsconfig.json"
}
