{
  "compilerOptions": {
    "rootDir": ".",
    "customConditions": ["@seek/skuba/source"],
    "declaration": true,
    "lib": ["ES2023"],
    "outDir": "lib",
    "removeComments": false,
    "target": "ES2023",
    "moduleResolution": "Node16",
    "module": "node20"
  },
  "exclude": [
    "integration/**/*",
    "lib*/**/*",
    "packages/api/lib",
    "packages/eslint-config-skuba",
    "packages/eslint-plugin-skuba",
    "template/**/*",
    "**/*/tsdown.config.mts",
    "packages/pnpm-plugin-skuba"
  ],
  "extends": "./config/tsconfig.json"
}
