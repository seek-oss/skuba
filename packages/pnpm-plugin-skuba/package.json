{
  "name": "pnpm-plugin-skuba",
  "version": "1.0.0",
  "private": false,
  "description": "Pnpm plugin for skuba",
  "homepage": "https://github.com/seek-oss/skuba/tree/main/packages/pnpm-plugin-skuba#readme",
  "bugs": {
    "url": "https://github.com/seek-oss/skuba/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seek-oss/skuba.git",
    "directory": "packages/pnpm-plugin-skuba"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": ".pnpmfile.cjs",
  "files": [
    ".pnpmfile.cjs"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "pnpm --silent skuba format",
    "lint": "pnpm --silent skuba lint",
    "prepack": "tsdown",
    "skuba": "node ../../lib/skuba",
    "test": "node --import tsx --test 'src/**/*.test.ts'",
    "test:ci": "node --import tsx --test --experimental-test-coverage 'src/**/*.test.ts'",
    "test:watch": "node --import tsx --test --watch 'src/**/*.test.ts'"
  },
  "devDependencies": {
    "@pnpm/config": "^1004.9.0"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
