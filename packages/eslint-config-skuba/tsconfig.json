{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "lib": ["ES2023"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "outDir": "lib",
    "removeComments": false,
    "skipLibCheck": true,
    "target": "ES2023",
    "baseUrl": "."
  },
  "exclude": ["lib*/**/*"],
  "extends": "../../config/tsconfig.json",
  "include": [
    "eslint.config.js",
    "index.d.ts",
    "index.js",
    "src/**/*",
    "requireExtensions.test.ts",
    "tsdown.config.mts"
  ]
}
